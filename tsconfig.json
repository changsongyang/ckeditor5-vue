{
  "compilerOptions": {
    "target": "ES2019",
    "useDefineForClassFields": true,
    "module": "NodeNext",
    "lib": [
      "ES2019", // Must match the "target"
      "ES2020.String",
      "DOM",
      "DOM.Iterable"
    ],
    "skipLibCheck": true,

    "moduleResolution": "NodeNext",
    "isolatedModules": true,
    "moduleDetection": "force",

    /* Linting */
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,
    "declaration": true,
    "declarationDir": "./dist"
  },
  "include": [
    "src"
  ]
}
